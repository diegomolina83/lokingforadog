const audioElement = new Audio('./sounds/resistire.mp3');
window.onload = () => {
    document.querySelector("#start-button").addEventListener("click", () => {
        audioElement.volume = 0.1;
        audioElement.play();
        document.querySelector(".game-intro").classList.toggle("hidden")
        document.querySelector("#myCanvas").classList.toggle("hidden")
        game.init();
    })
};


audios: {
        enemyDies: new Audio('./audio/enemy_dies.wav'),
        gameOver: new Audio('./audio/gameover.wav'),
        fire: new Audio('./audio/fire.wav'),
        nextLevel: new Audio('./audio/next_level.wav'),
    },